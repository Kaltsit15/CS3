<h1>「新規ユーザー登録」</h1>

<%= form_tag '/top/saveuser', method: :post, data: { turbo: false} do %>
    <%= label_tag :uid, 'ユーザーID' %>
    <%= text_field_tag :uid %><br>
    <%= label_tag :pass, 'パスワード' %>
    <%= password_field_tag :pass %><br>
    <%= submit_tag '登録' %><br>
    <%= link_to 'ログインへ戻る', top_logout_path %>
<% end %>
